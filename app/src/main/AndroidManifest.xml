<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bilingsystem">


        <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:logo="@mipmap/ic_launcher"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.Bilingsystem">
            <activity android:name=".ShowSelectedBill"/>
            <activity android:name=".ForgotPassword"/>
            <activity android:name=".StaffUI" />
            <activity android:name=".Billing" />
            <activity android:name=".StaffInterface" />
            <activity android:name=".Aboutus" />
            <activity android:name=".BillingNotice" />
            <activity android:name=".ProfileActivity" />
            <activity android:name=".Signup" />

            <activity android:name=".MainActivity">
                <intent-filter>
                    <action android:name="android.intent.action.MAIN" />
                    <category android:name="android.intent.category.LAUNCHER" />
                </intent-filter>
            </activity>

            <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts" />

            <!--for push notification-->
            <service
                android:name="com.google.firebase.messaging.FirebaseMessagingService">
                <intent-filter>
                    <action android:name="com.google.firebase.MESSAGING_EVENT"/>
                </intent-filter>
            </service>
        </application>

        <uses-permission android:name="android.permission.INTERNET" />
        <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--for permission to check internet status-->

</manifest>