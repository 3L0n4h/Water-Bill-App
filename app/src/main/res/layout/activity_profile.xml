<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawable_layout_profile"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <include layout="@layout/top_toolbar"/>

        <TextView
            android:id="@+id/tv_home_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:text="user name"/>

        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/tv_home_acc_no_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="center"
            android:text="account no."/>

        <TextView
            android:id="@+id/tv_home_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="center"
            android:text="address"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/btn_edit_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/colorPrimary"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:text="Edit "
            android:textAlignment="center"
            android:drawableLeft="@drawable/ic_edit"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="425dp"
            android:layout_marginTop="30dp"
            android:padding="30dp"
            android:id="@+id/total_layout"
            android:visibility="gone"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_lbl_recent_total_amount_due"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Total Amount Due: "
                android:textSize="12dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_recent_total_amount_due"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="000.00"
                android:textSize="50dp"
                android:layout_marginBottom="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_lbl_recent_total_after_due"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Total Amount After Due: "
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_recent_total_after_due"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="000.00"
                android:textSize="50dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>




    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <include
            layout="@layout/profile_nav_drawer"/>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>